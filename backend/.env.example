# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fixlater
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=fixlater-uploads

# Cloudflare R2 Configuration (Alternative to AWS S3)
# Uncomment and configure if using R2 instead of S3
# R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET_NAME=fixlater-uploads

# Geocoding Configuration (for location services)
GEOCODER_PROVIDER=openstreetmap
